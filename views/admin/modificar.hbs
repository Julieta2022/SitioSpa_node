<div class="container" style="margin-right:0 ; margin-left: 548px">
    <div class="row">
        <div class="col">
            <h3 style="font-size:20px; text-align: left">Modificar Combo de Promoci√≥n</h3>
            <form action="/admin/promociones/modificar" method="post" >
            <input type="hidden" name="id" value="{{promocion.id}}">
                <div class="mb-3">
                     <label class="form-label">Combo</label>
                    <input type="text" class="form-control" name="combo" value="{{promocion.combo}}">
                </div>
                <div class="mb-3" >
                    <label class="form-label">Servicios</label>
                   <textarea class="form-control" rows="3" name="servicios">{{promocion.servicios}}</textarea> 
                </div>
                 <div class="mb-3">
                     <label class="form-label">Precio</label>
                    <input type="text" class="form-control" name="precio" value="{{promocion.precio}}">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p style="font-size: 12px; text-align: left; margin-top: 10px; padding: 0">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>